<article class="flex flex-col items-start justify-between {{post_class}}">
  <div class="relative w-full">
    {{#if feature_image}}
    <div class="relative">
        <a href='{{url}}'>
            <img src="{{img_url feature_image }}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" 
                class="aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]" />

        <div class="absolute bottom-0 left-0 p-4">
            <a href="/author/{{ authors.0.slug }}">
                <div class="h-10 w-10 rounded-full ring-1 ring-gray-100 flex items-center justify-center">
                <img src="{{ authors.0.profile_image }}" alt="" 
                class="h-10 w-10 rounded-full ring-1 ring-white hover:ring-2">
               </div>
            </a>
        </div>
        </a>
    </div>
{{/if}}

    <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
  </div>
  <div class="max-w-xl">
    <div class="mt-8 flex items-center gap-x-4 text-xs">
      <time datetime="2020-03-16" class="text-gray-500">{{date format="D MMM YYYY"}}</time>
      {{#foreach tags}}
      <a href='{{url}}' aria-label='{{title}}' class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">{{title}}</a>
      {{/foreach}}
    </div>
    <div class="group relative">
      <h3 class="mt-3 text-3xl font-bold tracking-loose leading-9 text-gray-900 group-hover:underline">
        <a href="{{url}}">
          <span class="absolute inset-0"></span>
          {{title}}
        </a>
      </h3>
      <p class="mt-5 line-clamp-3 text-sm leading-6">{{excerpt}}</p>
    </div>
  </div>
</article>
