<section class=" relative scroll-margin-top-40 pt-12">
    <div class="mx-auto px-20">
        <nav class="flex overflow-x: scroll gap-x-12 justify-between mx-auto pagination" role="navigation">
    <button class="text-gray-600 font-normal"><a href="/">Latest Updates</a></button>
    <button class="text-gray-600 font-normal hover-underline"><a href="/tag/small-business/">Small Business</a></button>
    <button class="text-gray-600 hover-underline font-normal"><a href="/tag/social-media-marketing/">Social Media Marketing</a></button>
    <button class="text-gray-600 cursor-pointer hover-underline font-normal"><a href="/tag/news/">News</a></button>
    <button class="text-gray-600 cursor-pointer hover-underline font-normal"><a href="/tag/podcasts/">Podcasts</a></button>
    <button class="text-gray-600 cursor-pointer hover-underline font-normal"><a href="/tag/open-blog/">Open blog</a></button>
    <button class="text-gray-600 cursor-pointer hover-underline font-normal"><a href="/tag/case-studies/">Case studies</a></button>
</nav>
        <hr class="mt-6"/>
        <!-- This is where the posts will be displayed -->
        {{#get "posts" filter="tags.slug:[{{slug}}]" include="tags,authors"}}
        {{#foreach posts}}
        <div class="mt-6 flex border-t border-gray-900/5 pt-6">
            <div class="relative flex items-center gap-x-4">
                <div class="h-16 w-16 rounded-full bg-blue-500 ring-2 ring-white">
                    <img src="{{ feature_image }}" alt="" class="h-16 w-16 rounded-full bg-gray-50">
                </div>
                <div class="text-sm leading-6">
                    <p class="font-bold text-lg text-blue-600 hover:underline">
                        <a href="/tag/{{url}}">
                            <span class="absolute inset-0"></span>
                            {{title}}
                        </a>
                    </p>
                    <p class="text-gray-600">{{excerpt}}</p>
                </div>
            </div>
        </div>
        {{/foreach}}
        {{pagination}}
        {{/get}}
    </div>
</section>