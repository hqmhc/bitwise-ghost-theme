{{! index.hbs }}

{{!< default}}
<div class="gh-page">
    <div class="gh-container">

        <div class="gh-postfeed">
            <div class="mt-16 space-y-20 lg:mt-20 lg:space-y-20">
                {{#foreach posts}}
                    {{#if @first}}
                        {{> bigPostCard page=../pagination.page}}
                    {{/if}}
                {{/foreach}}
            </div>
        </div>

        <div class="mt-16 space-y-20 lg:mt-20 lg:space-y-20">
            <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
                {{#foreach posts}}
                    {{#unless @first}}
                        {{> mercy page=../pagination.page}}
                    {{/unless}}
                {{/foreach}}
            </div>
        </div>

        <!-- If JS isn't enabled, fallback to standard pagiantion -->
        <noscript>
            <div class="gh-pagination">
                {{pagination}}
            </div>
        </noscript>
    </div>
</div>
